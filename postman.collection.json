{
  "info": {
    "name": "SETEC E-Commerce API",
    "_postman_id": "f8a1b8f4-3dbe-4b0e-8c3c-collection",
    "description": "Postman collection for Hono API endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8787/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Passw0rd!\",\n  \"name\": \"John Doe\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.data && json.data.token) {",
                  "  pm.collectionVariables.set('token', json.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"Passw0rd!\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const json = pm.response.json();",
                  "if (json && json.data && json.data.token) {",
                  "  pm.collectionVariables.set('token', json.data.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": { "raw": "{{baseUrl}}/auth/logout", "host": ["{{baseUrl}}"], "path": ["auth", "logout"] }
          },
          "response": []
        },
        {
          "name": "Me (Protected)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
            ],
            "url": { "raw": "{{baseUrl}}/auth/me", "host": ["{{baseUrl}}"], "path": ["auth", "me"] }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List All Products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/products", "host": ["{{baseUrl}}"], "path": ["products"] }
          },
          "response": []
        },
        {
          "name": "Get Products By Category (Paginated)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/category/:categoryId?page=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["products", "category", ":categoryId"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "10" }
              ],
              "variable": [{ "key": "categoryId", "value": "cat_123" }]
            }
          },
          "response": []
        },
        {
          "name": "List Products (Paginated + Filters)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/pagination?page=1&pageSize=10&minPrice=0&maxPrice=1000&inStock=true&searchQuery=phone&sortBy=price&sortOrder=asc",
              "host": ["{{baseUrl}}"],
              "path": ["products", "pagination"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "pageSize", "value": "10" },
                { "key": "minPrice", "value": "0" },
                { "key": "maxPrice", "value": "1000" },
                { "key": "inStock", "value": "true" },
                { "key": "searchQuery", "value": "phone" },
                { "key": "sortBy", "value": "price" },
                { "key": "sortOrder", "value": "asc" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Product By ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/products/:id",
              "host": ["{{baseUrl}}"],
              "path": ["products", ":id"],
              "variable": [{ "key": "id", "value": "prod_123" }]
            }
          },
          "response": []
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/products", "host": ["{{baseUrl}}"], "path": ["products"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"iPhone 15\",\n  \"description\": \"Smartphone\",\n  \"price\": 999,\n  \"stock\": 100,\n  \"imgs\": {\n    \"thumbnails\": [\"https://example.com/thumb.jpg\"],\n    \"previews\": [\"https://example.com/preview.jpg\"]\n  },\n  \"discountedPrice\": 899,\n  \"categoryId\": \"cat_123\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/products/:id",
              "host": ["{{baseUrl}}"],
              "path": ["products", ":id"],
              "variable": [{ "key": "id", "value": "prod_123" }]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"iPhone 15 Pro\",\n  \"price\": 1099,\n  \"stock\": 90\n}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/order", "host": ["{{baseUrl}}"], "path": ["order"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    { \"productId\": \"prod_123\", \"quantity\": 2 }\n  ],\n  \"customerName\": \"John Doe\",\n  \"customerEmail\": \"john@example.com\",\n  \"customerPhone\": \"+85512345678\",\n  \"shippingAddress\": \"Phnom Penh\"\n}"
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Categories",
      "item": [
        {
          "name": "List Categories",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/categories", "host": ["{{baseUrl}}"], "path": ["categories"] }
          },
          "response": []
        },
        {
          "name": "List Categories (Paginated)",
          "request": {
            "method": "GET",
