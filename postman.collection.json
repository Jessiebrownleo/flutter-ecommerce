          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/categories/:id",
              "host": ["{{baseUrl}}"],
              "path": ["categories", ":id"],
              "variable": [{ "key": "id", "value": "cat_123" }]
            }
          },
          "response": []
        },
        {
          "name": "Create Category",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": { "raw": "{{baseUrl}}/categories", "host": ["{{baseUrl}}"], "path": ["categories"] },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Phones\",\n  \"img\": \"https://example.com/category.jpg\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Update Category",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "url": {
              "raw": "{{baseUrl}}/categories/:id",
              "host": ["{{baseUrl}}"],
              "path": ["categories", ":id"],
              "variable": [{ "key": "id", "value": "cat_123" }]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Smartphones\",\n  \"img\": \"https://example.com/category2.jpg\"\n}"
            }
          },
          "response": []
        },
        {
          "name": "Delete Category",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/categories/:id",
              "host": ["{{baseUrl}}"],
              "path": ["categories", ":id"],
              "variable": [{ "key": "id", "value": "cat_123" }]
            }
          },
          "response": []
        }
      ]
    }
  ]
}